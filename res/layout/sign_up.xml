<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/parent_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/uname_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/name"
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_username"/>

                <EditText
                        android:id="@+id/register_username"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/lbl_enter_username"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/mbl_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uname_block"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/pwd"
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_password"/>

                <EditText
                        android:id="@+id/register_password"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text="Password"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/password_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mbl_block"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/rpassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="ReEnterPassword"/>

                <EditText
                        android:id="@+id/register_repwd"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text="Password"/>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/terms_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:layout_marginTop="40dp">

                <TextView
                        android:id="@+id/terms"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_terms"/>

                <ScrollView
                        android:id="@+id/textAreaScroller"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical">

                    <EditText
                            android:id="@+id/textView1"
                            android:layout_width="319dp"
                            android:layout_height="61dp" android:textStyle="italic">

                    </EditText>
                </ScrollView>
            </LinearLayout>
            <CheckBox
                    android:id="@+id/agree_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agree"/>
            <LinearLayout
                    android:id="@+id/email_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginTop="30dp">

                <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_email"/>

                <EditText
                        android:id="@+id/register_email"
                        android:layout_width="326dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/lbl_enter_email"/>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/credit_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginTop="30dp">

                <TextView
                        android:id="@+id/credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_credit"/>

                <EditText
                        android:id="@+id/credit_card"
                        android:layout_width="326dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/lbl_enter_credit"/>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/expiry_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/credite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_credite"/>

                <EditText
                        android:id="@+id/expiry_date"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/lbl_enter_credite"/>
                <TextView
                        android:id="@+id/cvv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_cvv"/>

                <EditText
                        android:id="@+id/cvv_code"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/lbl_enter_cvv"/>

            </LinearLayout>
            <LinearLayout android:id="@+id/age_block"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"

                          android:orientation="horizontal" android:gravity="center_horizontal"
                          android:layout_marginTop="50dp">
                <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Verification"
                        android:id="@+id/register_verification"
                        android:onClick="register"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="58dp"/>
                <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:id="@+id/registration_cancel"
                        android:onClick="verification"
                        android:layout_marginRight="26dp"
                        android:layout_alignEnd="@+id/parent_linear_layout" android:layout_marginEnd="44dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>