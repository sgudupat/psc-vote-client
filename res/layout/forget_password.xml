<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/forgetView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="FORGET PASSWORD"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/forgetView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forgetView1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="40dp"
        android:text="Client Login Name" />

    <EditText
        android:id="@+id/forgetEdit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forgetView2"
        android:layout_alignBottom="@+id/forgetView2"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/forgetView2"
        android:text="@string/forget_login" />

    <TextView
        android:id="@+id/forgetView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forgetView2"
        android:layout_below="@+id/forgetEdit1"
        android:layout_marginTop="46dp"
        android:text="Email Id" />

    <EditText
        android:id="@+id/forgetView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forgetView3"
        android:layout_alignBottom="@+id/forgetView3"
        android:layout_alignLeft="@+id/forgetEdit1"
        android:text="@string/forget_email" />

    <Button
        android:id="@+id/forget_Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/forgetView2"
        android:layout_below="@+id/forgetView4"
        android:layout_marginRight="17dp"
        android:layout_marginTop="88dp"
        android:text="RESET" />

    <Button
        android:id="@+id/forget_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forgetView4"
        android:layout_alignTop="@+id/forget_Reset"
        android:text="CANCEL" />

</RelativeLayout>
